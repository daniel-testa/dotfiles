// basado en  /usr/share/X11/xkb/symbols/latam
// paquete: extra/xkeyboard-config (arch linux)
// modificado por Daniel Testa para adptarse al teclado 'xsoul xk800' 
///////////////////////

// based on a keyboard
// Modified for a real Latin American Keyboard by Fabian Mandelbaum

default partial alphanumeric_keys
xkb_symbols "basic" {

    include "latin(type4)"

    name[Group1]="Spanish (Latin American)";

    key <AE01>	{ [         1,     exclam,          bar,   exclamdown ]	};
    key <AE03>	{ [         3, numbersign, periodcentered,   sterling ]	};
    key <AE04>	{ [         4,     dollar,   asciitilde,       dollar ]	};
    key <AE06>	{ [         6,  ampersand,      notsign,  fiveeighths ]	};
    key <AE11>	{ [apostrophe,   question,    backslash, questiondown ]	};
    key <AE12>	{ [questiondown, exclamdown, dead_cedilla, dead_ogonek]	};

    key <AD11>  { [ bracketleft,      braceleft, dead_grave, dead_circumflex ] };
    key <AD12>  { [bracketright,     braceright,       plus,        asterisk ] };

    key <AC10>	{ [      ntilde,         Ntilde, asciitilde, dead_doubleacute ] };
    key <AC11>  { [  dead_acute, dead_diaeresis,  braceleft,      braceright  ] };
    key <TLDE>  { [   masculine,    ordfeminine,  backslash,             bar  ] };

    key <BKSL>  { [   backslash,            bar,      slash,        question ] };

    include "level3(ralt_switch)"
};
